                        <div class="command-card" onclick="insertCommand('df -h')">
                            <div class="command-icon">
                                <i class="fas fa-hdd"></i>
                            </div>
                            <div class="command-info">
                                <code>df -h</code>
                                <p>Disk space (human)</p>
                            </div>

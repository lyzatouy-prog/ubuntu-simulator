<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ubuntu Linux Terminal Simulator</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="https://assets.ubuntu.com/v1/49a1a858-favicon-32x32.png">
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo-container">
                <div class="logo">
                    <i class="fab fa-ubuntu"></i>
                    <div class="logo-text">
                        <h1>Ubuntu Linux Terminal Simulator</h1>
                        <p class="subtitle">Interactive Linux Learning Environment</p>
                    </div>
                </div>
                <div class="stats">
                    <span class="stat"><i class="fas fa-code"></i> 50+ Commands</span>
                    <span class="stat"><i class="fas fa-graduation-cap"></i> ITC Cambodia</span>
                    <span class="stat"><i class="fas fa-server"></i> Ubuntu Server</span>
                </div>
            </div>
        </header>

        <div class="dashboard">
            <!-- Left: Terminal -->
            <div class="terminal-section">
                <div class="terminal-wrapper">
                    <div class="terminal-header">
                        <div class="window-controls">
                            <span class="control close"></span>
                            <span class="control minimize"></span>
                            <span class="control maximize"></span>
                        </div>
                        <div class="terminal-info">
                            <i class="fas fa-terminal"></i>
                            <span id="current-path">student@ubuntu:~/projects</span>
                            <span class="connection-status">
                                <i class="fas fa-wifi"></i> Connected
                            </span>
                        </div>
                    </div>
                    
                    <div class="terminal-body">
                        <div class="output-container" id="terminal-output">
                            <!-- Welcome message will be loaded here -->
                        </div>
                        
                        <div class="input-container">
                            <div class="prompt-line">
                                <span class="prompt-user">student@ubuntu</span>
                                <span class="prompt-colon">:</span>
                                <span class="prompt-path" id="current-dir">~/projects</span>
                                <span class="prompt-symbol">$</span>
                            </div>
                            <div class="input-wrapper">
                                <input type="text" id="command-input" 
                                       placeholder="Type command or click from panel..." 
                                       autocomplete="off" 
                                       autofocus>
                                <button id="clear-btn" title="Clear terminal">
                                    <i class="fas fa-broom"></i>
                                </button>
                                <button id="help-btn" title="Show help">
                                    <i class="fas fa-question-circle"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="terminal-footer">
                        <div class="status-bar">
                            <span id="command-count">0 commands executed</span>
                            <span id="current-time">--:--:--</span>
                            <span id="system-status">
                                <i class="fas fa-circle" style="color: #4CAF50;"></i> System OK
                            </span>
                        </div>
                    </div>
                </div>
                
                <!-- Quick Actions -->
                <div class="quick-actions">
                    <h3><i class="fas fa-bolt"></i> Quick Actions</h3>
                    <div class="action-buttons">
                        <button class="action-btn" onclick="runDemoCommand('system-info')">
                            <i class="fas fa-info-circle"></i> System Info
                        </button>
                        <button class="action-btn" onclick="runDemoCommand('network-check')">
                            <i class="fas fa-network-wired"></i> Network
                        </button>
                        <button class="action-btn" onclick="runDemoCommand('process-list')">
                            <i class="fas fa-tasks"></i> Processes
                        </button>
                        <button class="action-btn" onclick="clearTerminal()">
                            <i class="fas fa-broom"></i> Clear All
                        </button>
                        <button class="action-btn" onclick="runTutorial()">
                            <i class="fas fa-play-circle"></i> Tutorial
                        </button>
                    </div>
                </div>
            </div>

            <!-- Right: Command Panels -->
            <div class="panels-section">
                <!-- Search Box -->
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="command-search" 
                           placeholder="Search commands... (ls, grep, chmod)">
                </div>

                <!-- Navigation Tabs -->
                <div class="tabs">
                    <button class="tab active" onclick="showTab('basic')">
                        <i class="fas fa-star"></i> Basic
                    </button>
                    <button class="tab" onclick="showTab('files')">
                        <i class="fas fa-folder"></i> Files
                    </button>
                    <button class="tab" onclick="showTab('system')">
                        <i class="fas fa-cogs"></i> System
                    </button>
                    <button class="tab" onclick="showTab('network')">
                        <i class="fas fa-network-wired"></i> Network
                    </button>
                    <button class="tab" onclick="showTab('dev')">
                        <i class="fas fa-code"></i> Dev Tools
                    </button>
                </div>

                <!-- Basic Commands Panel -->
                <div class="panel active" id="basic-panel">
                    <h3><i class="fas fa-star"></i> Essential Commands</h3>
                    <div class="command-grid">
                        <div class="command-card" onclick="insertCommand('pwd')">
                            <div class="command-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="command-info">
                                <code>pwd</code>
                                <p>Print working directory</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('ls -la')">
                            <div class="command-icon">
                                <i class="fas fa-list"></i>
                            </div>
                            <div class="command-info">
                                <code>ls -la</code>
                                <p>List all files (detailed)</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('whoami')">
                            <div class="command-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="command-info">
                                <code>whoami</code>
                                <p>Current user</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('date')">
                            <div class="command-icon">
                                <i class="far fa-clock"></i>
                            </div>
                            <div class="command-info">
                                <code>date</code>
                                <p>Current date & time</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('history')">
                            <div class="command-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <div class="command-info">
                                <code>history</code>
                                <p>Command history</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('clear')">
                            <div class="command-icon">
                                <i class="fas fa-broom"></i>
                            </div>
                            <div class="command-info">
                                <code>clear</code>
                                <p>Clear terminal</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('man ls')">
                            <div class="command-icon">
                                <i class="fas fa-book"></i>
                            </div>
                            <div class="command-info">
                                <code>man [command]</code>
                                <p>Manual pages</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('echo "Hello Ubuntu"')">
                            <div class="command-icon">
                                <i class="fas fa-comment"></i>
                            </div>
                            <div class="command-info">
                                <code>echo</code>
                                <p>Print text</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- File Operations Panel -->
                <div class="panel" id="files-panel">
                    <h3><i class="fas fa-folder"></i> File Operations</h3>
                    <div class="command-grid">
                        <div class="command-card" onclick="insertCommand('touch file.txt')">
                            <div class="command-icon">
                                <i class="far fa-file"></i>
                            </div>
                            <div class="command-info">
                                <code>touch</code>
                                <p>Create empty file</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('mkdir new_folder')">
                            <div class="command-icon">
                                <i class="fas fa-folder-plus"></i>
                            </div>
                            <div class="command-info">
                                <code>mkdir</code>
                                <p>Create directory</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('cp file.txt backup.txt')">
                            <div class="command-icon">
                                <i class="fas fa-copy"></i>
                            </div>
                            <div class="command-info">
                                <code>cp</code>
                                <p>Copy files</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('mv old.txt new.txt')">
                            <div class="command-icon">
                                <i class="fas fa-exchange-alt"></i>
                            </div>
                            <div class="command-info">
                                <code>mv</code>
                                <p>Move/rename files</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('rm file.txt')">
                            <div class="command-icon">
                                <i class="fas fa-trash"></i>
                            </div>
                            <div class="command-info">
                                <code>rm</code>
                                <p>Remove file</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('cat file.txt')">
                            <div class="command-icon">
                                <i class="fas fa-eye"></i>
                            </div>
                            <div class="command-info">
                                <code>cat</code>
                                <p>View file content</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('nano file.txt')">
                            <div class="command-icon">
                                <i class="fas fa-edit"></i>
                            </div>
                            <div class="command-info">
                                <code>nano</code>
                                <p>Text editor</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('find . -name "*.txt"')">
                            <div class="command-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <div class="command-info">
                                <code>find</code>
                                <p>Search files</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('grep "text" file.txt')">
                            <div class="command-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <div class="command-info">
                                <code>grep</code>
                                <p>Search text</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('chmod 755 script.sh')">
                            <div class="command-icon">
                                <i class="fas fa-lock"></i>
                            </div>
                            <div class="command-info">
                                <code>chmod</code>
                                <p>Change permissions</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('chown user:group file.txt')">
                            <div class="command-icon">
                                <i class="fas fa-user-tag"></i>
                            </div>
                            <div class="command-info">
                                <code>chown</code>
                                <p>Change owner</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('tar -czf archive.tar.gz folder/')">
                            <div class="command-icon">
                                <i class="fas fa-archive"></i>
                            </div>
                            <div class="command-info">
                                <code>tar</code>
                                <p>Archive files</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- System Info Panel -->
                <div class="panel" id="system-panel">
                    <h3><i class="fas fa-cogs"></i> System Information</h3>
                    <div class="command-grid">
                        <div class="command-card" onclick="insertCommand('uname -a')">

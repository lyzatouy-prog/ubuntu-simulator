                                <i class="fas fa-list-ol"></i>
                            </div>
                            <div class="command-info">
                                <code>ps aux</code>
                                <p>Running processes</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('uptime')">
                            <div class="command-icon">
                                <i class="fas fa-hourglass-half"></i>
                            </div>
                            <div class="command-info">
                                <code>uptime</code>
                                <p>System uptime</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('lscpu')">
                            <div class="command-icon">
                                <i class="fas fa-microchip"></i>
                            </div>
                            <div class="command-info">
                                <code>lscpu</code>
                                <p>CPU information</p>
                            </div>
                        </div>
                        <div class="command-card" onclick="insertCommand('lsblk')">
                            <div class="command-icon">
                                <i class="fas fa-hdd"></i>
                            </div>
                            <div class="command-info">
                                <code>lsblk</code>
                                <p>Block devices</p>
